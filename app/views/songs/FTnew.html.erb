<h1>Create a Song</h1>

<%= form_tag songs_path do %>
  <label>Song Title:</label><br>
  <%= text_field_tag :'song[title]' %><br>

  <label>Artist Name:</label><br>
  <%= text_field_tag :'song[artist_name]' %><br>

  <label>Genre:</label><br>
  <%= collection_select :song, :genre_id, Genre.all, :id, :name %><br>

  <label>Note:</label><br>
  <%= text_field_tag :'song[notes][1]' %><br>

  <label>Note:</label><br>
  <%= text_field_tag :'song[notes][2]' %><br>

  <label>Note:</label><br>
  <%= text_field_tag :'song[notes][3]' %><br>

  <%= submit_tag "Create Song" %>
<% end %>
