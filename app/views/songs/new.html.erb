<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>
  <%= f.label :artist_name %> <br>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %> <br>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |a| %>
      <option value="<%= a.name %>"></option>
    <% end %>
  </datalist>
  <%= f.label :genre_id %> <br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %> <br>
  Notes <br>
  <input name="song[note_contents][]" id="song_notes_1"><br>
  <input name="song[note_contents][]" id="song_notes_2"><br>
  <input name="song[note_contents][]" id="song_notes_3"><br>  

  <%= f.submit %>
<% end %>


