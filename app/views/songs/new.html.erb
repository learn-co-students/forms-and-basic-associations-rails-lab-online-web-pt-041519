<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br />

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br />

  <% i = 0 %>
  <%= f.fields_for :notes do |note_form| %>
    <%= note_form.label :content, id: "song_notes_#{i}" %>
    <%= note_form.text_field :content, id: "song_notes_#{i}" %><br />
    <% i += 1 %>
  <% end %>

  <%= f.submit %>
<% end %>
